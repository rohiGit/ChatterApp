<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/message_text_background"
        android:maxWidth="330dp"
        android:padding="15dp"
        android:text="Message Text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/time_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_image_layout"
        android:layout_alignRight="@id/message_image_layout"
        android:layout_marginTop="6dp"
        android:text="0:00"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/message_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text_layout"
        android:layout_alignRight="@id/message_text_layout"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:contentDescription="TODO"
        android:padding="0dp"
        android:scaleType="centerCrop" />

</RelativeLayout>