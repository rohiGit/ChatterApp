<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorDullLight"
    tools:context=".SettingsActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/default_profile_circle"
        app:civ_border_color="#FF000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/settings_display_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="@string/display_name"
        android:textColor="@color/colorDarkGrey"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/settings_image"
        android:layout_marginTop="190dp" />

    <TextView
        android:id="@+id/settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="Hi there, I'm using Chatter app."
        android:textColor="@color/colorDarkGrey"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/settings_display_name"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/settings_image_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/layout_bg_blue"
        android:fontFamily="@font/medium"
        android:text="Change Image"
        android:textAllCaps="false"
        android:textColor="@color/colorLight"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/settings_status_btn"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/settings_status_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/layout_bg"
        android:fontFamily="@font/medium"
        android:text="Edit Status"
        android:textAllCaps="false"
        android:textColor="@color/colorLight"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp" />

</RelativeLayout>

